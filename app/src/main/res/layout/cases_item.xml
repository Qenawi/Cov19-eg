<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/countryIcon"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"/>

                <carbon.widget.TextView
                    android:id="@+id/countryName"
                    style="@style/TextViewStyle_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/wit"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Switzerland" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                    <carbon.widget.TextView
                        android:id="@+id/activeCases"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/carbon_red_300"
                        android:textSize="17sp"
                        tools:text="jhdsbshadbja" />

                    <carbon.widget.TextView
                        style="@style/TextViewStyle_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/worldTotalCount"
                        android:textColor="@color/carbon_green_400"
                        android:textSize="17sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <carbon.widget.TextView
                        android:id="@+id/recovered"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/carbon_red_300"
                        android:textSize="17sp"
                        tools:text="jhdsbshadbja" />

                    <carbon.widget.TextView
                        style="@style/TextViewStyle_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/total_recovered"
                        android:textColor="@color/carbon_green_400"
                        android:textSize="17sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <carbon.widget.TextView
                        android:id="@+id/deaths"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/carbon_red_300"
                        android:textSize="17sp"
                        tools:text="jhdsbshadbja" />

                    <carbon.widget.TextView
                        style="@style/TextViewStyle_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/death"
                        android:textColor="@color/carbon_green_400"
                        android:textSize="17sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/carbon_green_200"
            />

    </LinearLayout>
</layout>
