<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="q.tjw.cov19_eg.map.core.data.WorldLifeStateModule" />

        <variable
            name="egyptModule"
            type="androidx.lifecycle.MutableLiveData&lt;WorldLifeStateModule&gt;" />

        <variable
            name="worldModule"
            type="androidx.lifecycle.MutableLiveData&lt;WorldLifeStateModule&gt;" />
    </data>


    <LinearLayout
        android:id="@+id/companiesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:visibility="gone"
            android:padding="0dp">

            <carbon.widget.TextView
                android:id="@+id/l_total_count"
                style="@style/TextViewStyle_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/worldTotalCount"
                android:textColor="@color/carbon_green_400"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintVertical_bias="0.0" />

            <carbon.widget.TextView
                android:id="@+id/textView"
                style="@style/TextViewStyle_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="@color/carbon_red_300"
                android:textSize="16sp"
                app:decimal_format="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/l_total_count"
                app:layout_constraintVertical_bias="0.0"
                app:safe_text="@{worldModule.totalCases}"
                tools:text="@tools:sample/date/hhmm" />

            <carbon.widget.TextView
                android:id="@+id/textView2"
                style="@style/TextViewStyle_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/total_recovered"
                android:textColor="@color/carbon_green_400"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_total_count"
                app:layout_constraintVertical_bias="0.0" />

            <carbon.widget.TextView
                android:id="@+id/textView3"
                style="@style/TextViewStyle_mid"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/carbon_red_300"
                android:textSize="16sp"
                app:decimal_format="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0"
                app:safe_text="@{worldModule.recovered}"
                tools:text="@tools:sample/date/hhmm" />

            <carbon.widget.TextView
                android:id="@+id/textView4"
                style="@style/TextViewStyle_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/death"
                android:textColor="@color/carbon_green_400"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.0" />

            <carbon.widget.TextView
                android:id="@+id/textView5"
                style="@style/TextViewStyle_mid"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/carbon_red_300"
                android:textSize="16sp"
                app:decimal_format="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0"
                app:safe_text="@{worldModule.death}"
                tools:text="@tools:sample/date/hhmm" />

            <carbon.widget.TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/WorldWide"
                android:textColor="@color/carbon_white"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/l_total_count"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <carbon.widget.TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/egypt_count"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <carbon.widget.TextView
                android:id="@+id/textView8"
                style="@style/TextViewStyle_mid"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="@color/carbon_orange_300"
                android:textSize="16sp"
                app:decimal_format="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/l_total_count"
                app:layout_constraintVertical_bias="0.0"
                app:safe_text="@{egyptModule.totalCases}"
                tools:text="@tools:sample/date/hhmm" />

            <carbon.widget.TextView
                android:id="@+id/textView9"
                style="@style/TextViewStyle_mid"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/carbon_orange_300"
                android:textSize="16sp"
                app:decimal_format="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="0.0"
                app:safe_text="@{egyptModule.recovered}"
                tools:text="@tools:sample/date/hhmm" />

            <carbon.widget.TextView
                android:id="@+id/textView10"
                style="@style/TextViewStyle_mid"
                android:layout_width="wrap_content"

                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/carbon_orange_300"
                android:textSize="16sp"
                app:decimal_format="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:safe_text="@{egyptModule.death}"
                tools:text="@tools:sample/date/hhmm" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/search_icon" />


            <carbon.widget.TextView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="#D8D8D8"
                android:textColorHint="@color/carbon_grey_400"
                android:gravity="start"
                android:hint="@string/search"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/dark"
                android:textCursorDrawable="@null"
                android:textSize="20dp"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/countriesRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                </androidx.recyclerview.widget.RecyclerView>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</layout>
